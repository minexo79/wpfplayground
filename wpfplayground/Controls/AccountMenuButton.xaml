<UserControl x:Class="wpfplayground.Controls.AccountMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wpfplayground.Controls"
             x:Name="accountMenuButton">
    <Button Style="{StaticResource AccountMenuButtonStyle}">
        <Grid>
            <Border Style="{StaticResource AccountMenuButtonBackgroundStyle}" />
            <Border Style="{StaticResource AccountMenuButtonForegroundStyle}" />
            <TextBlock Style="{StaticResource AccountMenuButtonTextBlockStyle}" />
        </Grid>
    </Button>
</UserControl>
